<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/tvCarType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#050505"/>

    <TextView
        android:id="@+id/tvLocationType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvCarType"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#050505"/>

    <TextView
        android:id="@+id/tvDayOrRent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvLocationType"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#050505"/>

    <TextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvDayOrRent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#F10606"/>

</androidx.constraintlayout.widget.ConstraintLayout>
